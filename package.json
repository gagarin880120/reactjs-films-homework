{
  "name": "reactjs-films-homework",
  "version": "1.0.0",
  "main": "index.jsx",
  "scripts": {
    "lint": "eslint src/**/*.js src/**/*.jsx && stylelint **/*.scss",
    "test": "jest",
    "start": "cross-env NODE_ENV=development node server.js",
    "build": "cross-env NODE_ENV=production webpack --config ./config/webpack.prod.js",
    "prod": "npm run build && node server.js"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageThreshold": {
      "src/**/*.{js,jsx}": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test && npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gagarin880120/reactjs-films-homework.git"
  },
  "author": "Andrei Mandryk",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gagarin880120/reactjs-films-homework/issues"
  },
  "homepage": "https://github.com/gagarin880120/reactjs-films-homework#readme",
  "dependencies": {
    "@babel/runtime": "^7.9.6",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "express": "^4.17.1",
    "html-webpack-plugin": "^4.2.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^7.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.21",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^8.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.5.1",
    "babel-loader": "^8.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.5.4",
    "jest-fetch-mock": "^3.0.3",
    "react-test-renderer": "^16.13.1",
    "redux-mock-store": "^1.5.4",
    "style-loader": "^1.2.1",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0"
  }
}
